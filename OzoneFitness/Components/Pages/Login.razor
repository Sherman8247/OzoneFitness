@page "/login"

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: black;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: hotpink;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }

            .login-container h3 {
                margin-bottom: 20px;
                font-size: 24px;
                color: #333;
            }

            .login-container input {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
            }

            .login-container button {
                width: 100%;
                padding: 10px;
                background-color: lawngreen;
                color: black;
                border: none;
                border-radius: 5px;
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .login-container button:hover {
                    background-color: #0056b3;
                }

            .login-container p {
                margin-top: 10px;
                font-size: 14px;
            }

                .login-container p a {
                    color: #007BFF;
                    text-decoration: none;
                }

                    .login-container p a:hover {
                        text-decoration: underline;
                    }
    </style>
</head>

<div class="login-container">
    <h3>Login</h3>
    <EditForm Model="@userModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <input type="text" @bind="userModel.Username" placeholder="Username or Email" required>
        <input type="password" @bind="userModel.Password" placeholder="Password" required>
        <button type="submit">Login</button>
    </EditForm>
    <p>Don't have an account? <a href="/register">Register here</a></p>
</div>

@code {
    private UserModel userModel = new UserModel();

    private async Task HandleLogin()
    {
        // Add your login logic here
        // For example, call an API or service to authenticate the user
        Console.WriteLine($"Username: {userModel.Username}, Password: {userModel.Password}");
    }

    public class UserModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}
